DATABASE_URL="postgresql://postgres:postgres@localhost:5432/strategic_portal?schema=public"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="replace-with-strong-random-secret"
APP_ENV="development"
NEXT_PUBLIC_APP_ENV="development"
# Optional: force JSON module stores to persist in Postgres (recommended for serverless/staging).
# In Vercel this is auto-enabled when DATABASE_URL is set.
DATA_STORE_USE_DATABASE=""

# Staging-safe notification routing (used when APP_ENV=staging)
EMAIL_PROVIDER_API_KEY=""
TEAMS_WEBHOOK_URL=""
STAGING_NOTIFICATION_EMAIL="staging-notifications@test.com"
STAGING_TEAMS_MODE="disabled"
STAGING_TEAMS_RECIPIENT=""

# Optional Azure AD / Entra ID SSO
AZURE_AD_CLIENT_ID=""
AZURE_AD_CLIENT_SECRET=""
AZURE_AD_TENANT_ID=""

# Optional Azure OpenAI (preferred when all are present)
AZURE_OPENAI_ENDPOINT=""
AZURE_OPENAI_API_KEY=""
AZURE_OPENAI_DEPLOYMENT=""
AZURE_OPENAI_API_VERSION="2024-10-21"

# Optional OpenAI fallback (used only if Azure vars are missing)
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4o-mini"

# Optional Copilot request timeouts (milliseconds)
COPILOT_COMPLETION_TIMEOUT_MS="30000"
COPILOT_STREAM_TIMEOUT_MS="55000"

# Optional: force Copilot to use local JSON store (data/copilot-store.json)
# Useful when Postgres/Prisma is unavailable in local development.
COPILOT_FORCE_FILE_STORE="false"
